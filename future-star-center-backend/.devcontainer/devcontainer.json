{
    "name": "Go Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "go.toolsManagement.autoUpdate": true,
                "go.useLanguageServer": true
            },
            "extensions": [
                "golang.Go"
            ]
        }
    },
    "forwardPorts": [8080, 40000],
    "postCreateCommand": "go mod tidy",
    "remoteUser": "root"
}
